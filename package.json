{
  "name": "avocat-ai-monorepo",
  "private": true,
  "packageManager": "npm@11.4.2",
  "scripts": {
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "check:migrations": "node ./scripts/check-migrations.mjs",
    "dev:api": "pnpm --filter @apps/api dev",
    "dev:ops": "pnpm --filter @apps/ops dev",
    "dev:web": "pnpm --filter @avocat-ai/web dev",
    "db:push": "supabase migration up",
    "db:migrate": "pnpm --filter @apps/ops migrate",
    "ops:provision": "pnpm --filter @apps/ops provision",
    "ops:foundation": "pnpm --filter @apps/ops foundation",
    "ops:evaluate": "pnpm --filter @apps/ops evaluate",
    "ops:red-team": "pnpm --filter @apps/ops red-team",
    "ops:perf-snapshot": "pnpm --filter @apps/ops perf-snapshot",
    "ops:transparency": "pnpm --filter @apps/ops transparency",
    "ops:slo": "pnpm --filter @apps/ops slo",
    "ops:learning": "pnpm --filter @apps/ops learning",
    "ops:regulator-digest": "pnpm --filter @apps/ops regulator-digest",
    "ops:go-no-go": "pnpm --filter @apps/ops go-no-go",
    "ops:check": "pnpm --filter @apps/ops check",
    "ops:rotate-secrets": "pnpm --filter @apps/ops rotate-secrets",
    "ops:rls-smoke": "pnpm --filter @apps/ops rls-smoke",
    "ops:phase": "pnpm --filter @apps/ops phase",
    "seed": "pnpm --filter @db/seed start",
    "check:binaries": "node ./scripts/check-binaries.mjs",
    "start": "pnpm --filter @avocat-ai/web start"
  },
  "dependencies": {
    "next-pwa": "^5.6.0"
  },
  "engines": {
    "node": ">=20 <21"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "db/*",
    "JB/*",
    "francophone-lex/*"
  ]
}
