{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IRACStructuredResponse",
  "type": "object",
  "required": ["issue", "rule", "analysis", "conclusion"],
  "properties": {
    "issue": { "type": "string" },
    "rule": { "type": "string" },
    "analysis": { "type": "string" },
    "conclusion": { "type": "string" },
    "citations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "reference"],
        "properties": {
          "title": { "type": "string" },
          "reference": { "type": "string" },
          "url": { "type": "string", "format": "uri" }
        }
      }
    },
    "risk": {
      "type": "object",
      "properties": {
        "level": { "type": "string" },
        "notes": { "type": "string" }
      }
    }
  }
}
