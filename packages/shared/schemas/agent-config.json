{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AgentConfig",
  "type": "object",
  "required": ["id", "displayName", "jurisdiction", "tools"],
  "properties": {
    "id": { "type": "string" },
    "displayName": { "type": "string" },
    "jurisdiction": { "type": "string" },
    "language": { "type": "string" },
    "tools": {
      "type": "array",
      "items": { "type": "string" }
    },
    "policies": {
      "type": "array",
      "items": { "type": "string" }
    },
    "description": { "type": "string" }
  }
}
